.side-bar
  .header
    .header__box
      %p.header__box__name
        = current_user.name
      %ul.header__box__menu
        %li.header__box__menu__new-group
        = link_to new_group_path,class:"header__box__menu" do
          = icon('fa', 'edit')
        %li.header__box__menu__edit
        = link_to edit_user_path(current_user) do
          = icon('fa', 'cog', class: 'icon')

  .groups
    - current_user.groups.each do |group|
      .group
        = link_to group_messages_path(group) do
          %p.group__name
            = group.name
          %p.group__message
            = group.show_last_message